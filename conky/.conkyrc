${if_existing /sys/class/power_supply/BAT1}${voffset -0}Battery 2: ${font Arial:size=10}${color1}${battery_percent BAT1}%${color}${font} ${alignr}${color2}${battery_bar BAT1 8,60}${color}${else}${color0}${font ConkyColors:size=13}6${font}${color}${goto 32}${voffset -5}Battery 2: ${font Arial:size=10}${color2}Unknown Status${color}${font}${endif} 

# | --DISKS
ROOT: ${font Arial:size=10}${color1}${fs_free /}${color}${font} ${alignr}${color2}${fs_bar /}${color}
HOME: ${font Arial:size=10}${color1}${fs_free /home}${color}${font} ${alignr}${color2}${fs_bar /home}${color}

