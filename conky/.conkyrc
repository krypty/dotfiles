######################
# - Conky settings - #
######################
update_interval 15
total_run_times 0
net_avg_samples 1
cpu_avg_samples 1
if_up_strictness link
background no

#imlib_cache_size 0
double_buffer yes
no_buffers yes

format_human_readable

#####################
# - Text settings - #
#####################
use_xft yes
xftfont Arial:size=10
override_utf8_locale yes
text_buffer_size 2048

#############################
# - Window specifications - #
#############################
own_window_class Conky
own_window yes
own_window_type desktop
own_window_argb_visual yes
own_window_argb_value 0
#own_window_colour 1D1D1D
own_window_transparent yes
own_window_hints undecorated, below, sticky, skip_pager

alignment top_right
gap_x 8
gap_y 16
minimum_size 250 600
maximum_width 500
border_width 5

default_bar_size 60 8

## Window Setting
#own_window_argb_visual true
#own_window_argb_value 0
#own_window_type desktop
#own_window yes
#own_window_transparent yes
#own_window_type normal
#own_window_hints undecorated,below,sticky,skip_taskbar,skip_pager

#########################
# - Graphics settings - #
#########################
draw_shades no
#draw_outline yes
default_outline_color black
default_color white
draw_graph_borders yes


color0 727272
color1 c1c1c1
color2 c1c1c1
color3 960050
color4 262729

TEXT

##############a
# - SYSTEM - #
##############
${font Ostrich Sans:size=24}SYSTEM $stippled_hr${font}
${voffset 21}${voffset -8}Kernel:  ${alignr}${color2}${kernel}${color}
Uptime: ${alignr}${color2}${uptime}${color}

# |--CPU
CPU1: ${font Arial:size=10}${color1}${cpu cpu1}%${color}${font} ${alignr}${color2}${cpugraph cpu1 8,60 262729 ffffff}${color}
