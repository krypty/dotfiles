[user]
    name = Gary Marigliano
    useConfigOnly = true  # then, use `git config user.email "me@example.com"`
[alias]
    lg = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
    stash-all = stash save --include-untracked
    reset-origin = reset --hard @{u}
[credential]
    helper = /usr/share/git/credential/gnome-keyring/git-credential-gnome-keyring
[color]
    ui = auto
[status]
    showUntrackedFiles = all
[pager]
    diff = true
    difftool = true
[diff]
    colorMoved = default
    color-moved-ws = allow-indentation-change
[difftool]
    prompt = false
[core]
    pager = delta
    excludesfile = /home/gary/.gitignore_global
    fsmonitor = true
[merge]
    ff = no
    commit = no
    conflictstyle = diff3
[pull]
    ff = yes
[submodule]
    recurse = false
[interactive]
    diffFilter = delta --color-only

[delta]
    navigate = true  # use n and N to move between diff sections
    line-numbers = true
