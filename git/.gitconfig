[user]
    email = gmarigliano93@gmail.com
    name = Gary Marigliano
[alias]
    lg = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
    stash-all = stash save --include-untracked
	reset-origin = reset --hard @{u}
[credential]
    helper = /usr/share/git/credential/gnome-keyring/git-credential-gnome-keyring
[color]
    ui = auto
[status]
    showUntrackedFiles = all
[pager]
    diff = true
    difftool = true
[diff]
    tool = icdiff
    colorMoved = default
    color-moved-ws = allow-indentation-change
[difftool]
    prompt = false
[difftool "icdiff"]
    cmd = /usr/bin/env icdiff --line-numbers  $LOCAL $REMOTE
[core]
    excludesfile = /home/gary/.gitignore_global
    pager = delta --theme='Monokai Extended' 
    #--plus-color="#6e6e10" --minus-color="#9d0006"
[interactive]
    diffFilter = delta --color-only

[include]
    path = /home/gary/.delta_themes

[delta]
    features = line-numbers decorations
    inspect-raw-lines = false

