# When focus changed on an other monitor, don't re-center the mouse position.
# mouse_warping none

# Changement du Focus
# move the mouse at coordinates 100,100 of the newly focused window
# FIXME: try ydotool instead but it lacks --window option
set $warpmouse exec xdotool mousemove --window $(xdotool getwindowfocus getwindowfocus) 150 150
bindsym $mod+h focus left; $warpmouse
bindsym $mod+j focus down; $warpmouse
bindsym $mod+k focus up; $warpmouse
bindsym $mod+l focus right; $warpmouse
bindsym $mod+Left focus left; $warpmouse
bindsym $mod+Down focus down; $warpmouse
bindsym $mod+Up focus up; $warpmouse
bindsym $mod+Right focus right; $warpmouse

# Déplacement des fenêtre
bindsym $mod+Shift+h move left
bindsym $mod+Shift+j move down
bindsym $mod+Shift+k move up
bindsym $mod+Shift+l move right
bindsym $mod+Shift+Left move left
bindsym $mod+Shift+Down move down
bindsym $mod+Shift+Up move up
bindsym $mod+Shift+Right move right

# Changement du mode de split (vertical ou horizontal)
bindsym $mod+b split h
bindsym $mod+v split v

# Permet de changer de mode
bindsym $mod+f fullscreen toggle
